<div class="container">
  <h1 style="margin-top:20px">Users</h1>

  <%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary', style: 'margin-left:1170px' %>

  <table class="table ", style="margin-top:20px">
    <h3 style="margin-top:20px">Total Users: <%= @users.count %></h3>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Address</th>
        <th>Action</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.address %></td>
          <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
