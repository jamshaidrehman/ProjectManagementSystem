<div class="container", style="margin-top: 15px;">
   <h1 style="margin-top:20px">User Detail</h1>

   <% if current_user.admin? %>
     <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-info', style: 'margin-left:1000px' %> | 
     <%= link_to 'Destroy', admin_user_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %>  |
     <%= link_to 'Back', admin_users_path, class: 'btn btn-success' %>
   <% end %>

   <p>
     <strong>Name:</strong>
     <%= @user.name %>
   </p>

   <p>
     <strong>Email:</strong>
     <%= @user.email %>
   </p>

   <p>
     <strong>Role:</strong>
     <%= @user.role %>
   </p>

   <p>
     <strong>Address:</strong>
     <%= @user.address %>
   </p>
