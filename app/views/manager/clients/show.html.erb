<div class="container", style="margin-top: 15px;">
   <% if !flash[:notice].blank? %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
   <% end %>

   <h1 style="margin-top:20px">Client Detail</h1>

   <%= link_to 'Edit', edit_manager_client_path(@client), class: 'btn btn-info', style: 'margin-left:1000px' %> | 
   <%= link_to 'Destroy', manager_client_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %>  |
   <%= link_to 'Back', manager_clients_path, class: 'btn btn-success' %>

   <p>
     <strong>Name:</strong>
     <%= @client.name %>
   </p>

   <p>
     <strong>Email:</strong>
     <%= @client.email %>
   </p>

   <p>
     <strong>Contact No:</strong>
     <%= @client.contact %>
   </p>

   <p>
     <strong>Address:</strong>
     <%= @client.address %>
   </p>

<br>

  <% if @client.projects.present? %>
    <h1 style="margin-top:20px">Projects</h1>
    
    <table class="table ", style="margin-top:20px">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Action</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="table">
        <% @client.projects.each do |project| %>
          <tr>
            <td><%= project.title%></td>
            <td><%= project.description %></td>
            <td><%= link_to 'Show', manager_project_path(project), class: "btn btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
