<div class="container", style="margin-top: 15px;">
   <h1 style="margin-top:20px">Project Detail</h1>

   <%= link_to 'Edit', edit_manager_project_path(@project), class: 'btn btn-info', style: 'margin-left:900px' %> | 
   <%= link_to 'Destroy', manager_project_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %>  | 
   <%= link_to 'Add Payment', new_manager_project_payment_path(@project), class:"btn btn-info" %> | 
   <%= link_to 'Back', manager_projects_path, class: 'btn btn-success' %>

   <p>
     <strong>Title:</strong>
     <%= @project.title %>
   </p>

   <p>
     <strong>Description:</strong>
     <%= @project.description %>
   </p>

   <p>
     <strong>File:</strong>
     <%= @project.file %>
     <% if @project.file.present? %>  
       <%= link_to 'Download', @project.file_url %>
     <% end %>
   </p>
   <br>

   <% if @project.payments.present? %>
      <h1 style="margin-top:20px">Payments</h1>
      
      <table class="table ", style="margin-top:20px">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Date</th>
            <th>Action</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="table">
          <% @project.payments.each do |payment| %>
            <tr>
              <td><%= payment.amount %></td>
              <td><%= payment.created_at %></td>
              <td><%= link_to 'Destroy', manager_project_payment_path(@project, payment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
   <% end %>

   <div id="comments-section">
    <h2 style="margin-top: 40px"> Comments</h2>
     <%= render @project.comments %>
   </div>

   <div id="comments-form">
     <h2 style="margin-top: 20px">Add Comments</h2>
     <%= render 'manager/comments/form' %>
   </div>
</div>
