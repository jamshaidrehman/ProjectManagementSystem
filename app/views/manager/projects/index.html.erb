<div class="container">
  <% if !flash[:notice].blank? %>
    <div class="alert alert-success" role="alert", style="margin-top:10px">
      <%= flash[:notice] %>
    </div>
  <% end %>

<h1 style="margin-top:20px">Projects</h1>

<%= link_to 'New Project', new_manager_project_path, class: 'btn btn-primary', style: 'margin-left:1170px' %>

<table class="table ", style="margin-top:20px">
  <h3 style="margin-top:20px">Total Projects: <%= @projects.count %></h3>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table">
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title%></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', manager_project_path(project), class: "btn btn-info" %></td>
        <td><%= link_to 'Add Payment', new_manager_project_payment_path(project), class:"btn btn-info" %></td>
    <% end %>
  </tbody>
</table>
<br>

</div>

