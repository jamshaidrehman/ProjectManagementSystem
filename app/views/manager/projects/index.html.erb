<div class="container">
  <h1 style="margin-top:20px">Projects</h1>

  <%= link_to 'New Project', new_manager_project_path, class: 'btn btn-primary', style: 'margin-left:1170px' %>

  <table class="table ", style="margin-top:20px">
    <h3 style="margin-top:20px">Total Projects: <%= @projects.count %></h3>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table">
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title%></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', manager_project_path(project), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

