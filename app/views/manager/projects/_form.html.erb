<%= form_for ([:manager, @project]) do |f| %>
  <%= render 'shared/errors', object: @project %>

  <div class="field form-group">
    <%= f.label :Select_Client %>
    <%= f.select(:client_id, Client.all.collect { |c| [c.name, c.id] }, {:include_blank => true, :selected => f.object.client_id}, class:'form-control form-select') %>
  </div>

  <div class="field form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :Description %>
    <%= f.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :Attach_File %>
    <%= f.file_field :file, class:'form-control', required: true %>
  </div>

  <div class="actions", style="margin-top:10px">
    <%= f.submit %>
  </div>
<% end %>
