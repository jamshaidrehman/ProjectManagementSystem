<div class="container">
  <% if !flash[:notice].blank? %>
    <div class="alert alert-success" role="alert", style="margin-top:10px">
      <%= flash[:notice] %>
    </div>
  <% end %>

<h1 style="margin-top:20px">Clients</h1>

<%= link_to 'New Client', new_client_path, class: 'btn btn-primary', style: 'margin-left:1170px' %>

<table class="table ", style="margin-top:20px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Address</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table">
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.contact %></td>
        <td><%= client.address %></td>
        <td><%= link_to 'Show', client, class: "btn btn-info" %></td>
        <td><%= link_to 'Project', client_projects_path(client), class: "btn btn-info" %></td>
    <% end %>
  </tbody>
</table>

<br>

</div>
